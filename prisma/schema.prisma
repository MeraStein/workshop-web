generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//the table
model Registration {
  id        Int      @id @default(autoincrement())  // מזהה ייחודי אוטומטי
  name      String   // חובה
  email     String?  // אופציונלי
  phone     String   // חובה
  createdAt DateTime @default(now()) // תאריך אוטומטי
}
